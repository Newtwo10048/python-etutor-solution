#7.星號繪三角形
num = input()
if int(num) == 1:
    print("    *")
    print("   * *")
    print("  *   *")
    print(" *     *")
    print("*********")
elif int(num) == 2:
    print("    *")
    print("   ***")
    print("  *****")
    print(" *******")
    print("*********")
else:
    print("*********")
    print(" *******")
    print("  *****")
    print("   ***")
    print("    *")
#elif 就是else if
